{
  "manifest_version": 3,
  "name": "Worduno: Text Simplifier",
  "version": "2024.1",
  "description": "Highlight text and simplify it.",
  "permissions": ["tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "worduno-logo16.png",
      "48": "worduno-logo48.png",
      "128": "worduno-logo128.png"
    }
  },
  "icons": {
    "16": "worduno-logo16.png",
    "48": "worduno-logo48.png",
    "128": "worduno-logo128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
